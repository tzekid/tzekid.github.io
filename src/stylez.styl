/****************************************/
/************** GLOBALS *****************/
/****************************************/

@import url(//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css)

.quando
  font-family: 'Quando'

.josefin
  font-family: 'Josefin Sans'

$red = #d64937
.red
  color: $red

$red-darker = #C1292E
.red-darker
  color: $red-darker

footer
header
  &::after
      width: 100%
      height: 5px
      position: absolute
      left: 0
      content: ''

header::after
  background: linear-gradient(to right, #FDFFFC, #C1292E 33%, #235789 66%, #161925 100%)
  top: 0

footer::after
  background: linear-gradient(to left, #FDFFFC, #C1292E 33%, #235789 66%, #161925 100%)
  bottom: 0

html
body
  width: 100%
  height: 100%

  overflow-x: hidden
  overflow-y: auto


/****************************************/
/************** MAIN PAGE ***************/
/****************************************/


h1.logo
  padding: 0px
  font-size: 60px

.container
  width: 920px
  height: 100vh
  display: flex
  margin-left: auto
  margin-right: auto
  flex-direction: column
  align-items: center
  justify-content: center
  p
    margin: 0 0
    padding: 0 0
    font-size: 26px
  .big
    font-size: 36px
  .small
    font-size: 22px
  .smaller
    font-size: 18px
    font-weight: 200
    .quando
      font-size: 14px

		
